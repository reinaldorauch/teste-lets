{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDirs": [
      "./src/",
      "./tests/"
    ],
    "paths": {
      "@app/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
 },
 "imports": {
   "@app/*": "./src/*",
   "@tests/*": "./tests/*"
 }
}
